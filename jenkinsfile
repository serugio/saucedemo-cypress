pipeline {
    agent any

//     tools {nodejs "Node18"}

//     environment {
//        CHROME_BIN = '/bin/google-chrome'
//    }

    stages {
        stage('checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/master']],
                    userRemoteConfigs: [[credentialsId: 'serch',
                        url: 'https://github.com/serugio/saucedemo-cypress']])
            }
        }
        stage('Dependencies') {
           steps {
               cmd 'npm install'
               echo "instale Dependencies"
           }
       }
    //     stage('Test') {
    //         steps {
    //             npm run E2ETest
                
    //         }
        // }
    }
}


   

   stages {
       
       stage('e2e Tests') {
         Parallel{
             stage('Test 1') {
                  steps {
                sh 'npm run cypress:ci'
                  }
               }
             
             stage('Test 2') {
                  steps {
                sh 'npm run cypress2:ci'
                  }
               }

       }
       stage('Deploy') {
           steps {
               echo 'Deploying....'
           }
       }
   }
}